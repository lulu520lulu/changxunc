<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/interestItem_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/interestItem_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/center_guide_interest_select"
        app:layout_constraintBottom_toBottomOf="@id/interestItem_img"
        app:layout_constraintEnd_toEndOf="@id/interestItem_img"
        app:layout_constraintStart_toStartOf="@id/interestItem_img"
        app:layout_constraintTop_toTopOf="@id/interestItem_img" />

    <TextView
        android:id="@+id/interestItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="吃货必备"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/interestItem_img"
        app:layout_constraintStart_toStartOf="@id/interestItem_img"
        app:layout_constraintTop_toBottomOf="@id/interestItem_img" />
</androidx.constraintlayout.widget.ConstraintLayout>