<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/center_home_padding"
    android:paddingRight="@dimen/center_home_padding">

    <LinearLayout
        android:id="@+id/products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="22dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="@dimen/center_home_title_icon_width"
            android:layout_height="@dimen/center_home_title_icon_width"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/center_icon_home_hot" />

        <TextView
            android:id="@+id/product_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="@string/center_icon_home_hot"
            android:textColor="@color/center_main_text"
            android:textSize="@dimen/center_main_tab_text_size" />

        <TextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/center_general_icon_tiao"
            android:drawablePadding="2dp"
            android:text="@string/see_more"
            android:textColor="@color/center_gray_text"
            android:textSize="15sp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>