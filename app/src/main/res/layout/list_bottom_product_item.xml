<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="111"
            android:textColor="@color/main_text"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp">

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/pin_bg_color"
                android:maxLines="1"
                android:padding="2dp"
                android:text="111"
                android:textColor="@color/pin_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="111"
                android:textColor="@color/product_price"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/price_text"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/price_text"
                android:maxLines="1"
                android:text="111"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/add_shop"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/price_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/gray_bg"
                android:scaleType="center"
                android:src="@mipmap/icon_shop_cart" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>