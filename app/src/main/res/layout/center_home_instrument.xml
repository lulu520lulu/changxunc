<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/center_main_bg" />

    <LinearLayout
        android:id="@+id/products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/center_home_padding"
        android:paddingTop="22dp"
        android:paddingRight="@dimen/center_home_padding"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="@dimen/center_home_title_icon_width"
            android:layout_height="@dimen/center_home_title_icon_width"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/center_icon_home_big_share" />

        <TextView
            android:id="@+id/product_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="@string/home_big_share"
            android:textColor="@color/center_main_text"
            android:textSize="@dimen/center_main_tab_text_size" />

        <TextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/center_general_icon_tiao"
            android:drawablePadding="2dp"
            android:text="@string/see_more"
            android:textColor="@color/center_gray_text"
            android:textSize="15sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/position_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@mipmap/center_home_big_check"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/center_home_big_check"
            android:textColor="@color/center_home_radio_group_text"
            android:textSize="@dimen/center_main_tab_text_size" />

        <View
            android:layout_width="1px"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/center_line" />

        <RadioButton
            android:id="@+id/position_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:drawableLeft="@mipmap/center_home_big_yan"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/center_home_big_yan"
            android:textColor="@color/center_home_radio_group_text"
            android:textSize="@dimen/center_main_tab_text_size" />

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="@dimen/center_home_padding"
        android:paddingRight="@dimen/center_home_padding" />

</LinearLayout>