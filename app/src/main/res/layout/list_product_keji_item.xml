<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image"
            android:maxLines="3"
            android:text="1111"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sell_num_bg"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="1111"
                android:textColor="@color/main_green_text"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:text="1111"
                android:textColor="@color/product_price"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/add_shop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/price_container"
            android:layout_alignParentRight="true"
            android:background="@drawable/gray_bg"
            android:scaleType="center"
            android:src="@mipmap/icon_shop_cart" />


        <!--        <ImageView-->
        <!--            android:id="@+id/add_love"-->
        <!--            android:layout_width="12dp"-->
        <!--            android:layout_height="14dp"-->
        <!--            android:layout_alignBottom="@+id/price_text"-->
        <!--            android:layout_marginRight="12dp"-->
        <!--            android:layout_toLeftOf="@+id/add_shop"-->
        <!--            android:scaleType="fitXY"-->
        <!--            android:src="@mipmap/icon_add_love"-->
        <!--            android:visibility="gone" />-->
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:background="@color/line" />

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</LinearLayout>