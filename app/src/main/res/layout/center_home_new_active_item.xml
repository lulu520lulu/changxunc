<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/center_cheng_place_icon"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/publish_date"
        android:textColor="@color/center_home_content_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/cenet_new_active_time"
        android:drawablePadding="3dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="111"
        android:textColor="@color/center_home_content_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@mipmap/cenet_new_active_position"
        android:drawablePadding="3dp"
        android:maxLines="1"
        android:layout_marginBottom="12dp"
        android:text="111111"
        android:textColor="@color/center_main_text"
        android:textSize="12sp" />


</LinearLayout>