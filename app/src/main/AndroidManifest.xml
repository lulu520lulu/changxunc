<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mall.hangxunc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.mall.hangxunc.HangXunApplication"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/HangXunTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.mall.hangxunc.LauncherActivity"
            android:configChanges="orientation|screenSize|locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mall.hangxunc.pages.MainActivity"
            android:configChanges="orientation|screenSize|locale"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name="com.mall.hangxunc.web.HybridActivity"
            android:configChanges="orientation|screenSize|locale" />
        <activity
            android:name="com.mall.hangxunc.pages.home.MallAllPostActivity"
            android:configChanges="orientation|screenSize|locale" />
        <activity
            android:name="com.mall.hangxunc.change.ChangeLanguageActivity"
            android:launchMode="singleTask"
            android:theme="@style/Transparent" />
        <activity
            android:name="com.mall.hangxunc.pages.street.StreetHomeActivity"
            android:configChanges="orientation|screenSize|locale"
            android:launchMode="singleTop" />

        <activity
            android:name="com.mall.hangxunc.pages.street.StreetAllPostActivity"
            android:configChanges="orientation|screenSize|locale" />

        <activity
            android:name="com.mall.hangxunc.pages.guide.GuideActivity"
            android:configChanges="orientation|screenSize|locale" />

        <activity
            android:name="com.mall.hangxunc.pages.center.CenterHomeActivity"
            android:configChanges="orientation|screenSize|locale"
            android:launchMode="singleTop" />
        <activity
            android:name="com.mall.hangxunc.pages.center.CenterAllPostActivity"
            android:configChanges="orientation|screenSize|locale" />
    </application>

</manifest>